{% extends 'base.html.twig' %}

{% block h1 %}
	<h1>Ticket</h1>
{% endblock %}

{% block nav %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="row justify-content-md-center ">
		<div class="col-md-auto">
			<div class="card" style="width: 50rem;">
				<div class="card-header">{{ticket.Titre}}<p class="card-text text-center">{{ticket.EtatTicket}}</p>
				</div>
				<div class="card-body">
					<p class="card-text text-center">{{ticket.Message}}</p>
				</div>
				<div class="card-footer">
					{% if is_granted('ROLE_ADMIN') %}
						<a type="button" class="btn btn-warning" href="/edit/{{ticket.id}}" class="card-link"><i class="bi bi-pencil-square"></i></a>
					{% endif %}
					<a type="button" class="btn btn-danger" href="/delete/{{ticket.id}}" class="card-link"><i class="bi bi-x-square-fill"></i></a>
				</div>
			</div><br>
		</div>
	</div>
	<div class="col">{{('Commentaires')|trans({},'blog')}}:
		{% for comment in comments %}
			<ul>
				<div class="card" style="width: 50rem;">

					<div class="card-body">
						<p>{{comment.message}}</p>
					</div>
					<div class="card-footer">
						<p>{{comment.auteur}}</p>
					</div>
					<a type="button" class="btn btn-danger" href="/deleteComment/{{comment.id}}" class="card-link"><i class="bi bi-x-square-fill"></i></a>
				
				</div>
			</ul>
		{% else %}
			<p>Aucun message pour l'instant</p>
		{% endfor %}
		{{ form(form) }}
		</div>

	{% endblock %}
