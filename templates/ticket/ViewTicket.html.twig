{% extends 'base.html.twig' %}

{% block h1 %}
	<h1>Ticket</h1>
{% endblock %}

{% block nav %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="row justify-content-md-center ">
		<div class="col-md-auto">
			<div class="card" style="width: 50rem;">
				<div class="card-header">{{ticket.Titre}}<p class="card-text text-center">{{ticket.EtatTicket}}</p>
				</div>
				<div class="card-body">
					<p class="card-text text-center">{{ticket.Message}}</p>
				</div>
				<div class="card-footer">
					{% if is_granted('ROLE_ADMIN') %}
						<a type="button" class="btn btn-warning" href="/edit/{{ticket.id}}" class="card-link">
							<i class="bi bi-pencil-square"></i>
						</a>
					{% endif %}
					<a type="button" class="btn btn-danger" href="/delete/{{ticket.id}}" class="card-link">
						<i class="bi bi-x-square-fill"></i>
					</a>
				</div>
			</div><br>
		</div>
	</div>
	<div class="col">{{('Commentaires')|trans({},'blog')}}:
		{% for comment in comments %}
			<ul>
				<div class="card" style="width: 50rem;">

					<div class="card-body">
						<p>{{comment.message}}</p>
					</div>

					<a type="button" class="btn btn-danger" href="/deleteComment/{{comment.id}}" class="card-link">
						<i class="bi bi-x-square-fill"></i>
					</a>


				</div>
			</ul>
		{% else %}
			<p>Aucun message pour l'instant</p>
		{% endfor %}
		{{ form(form) }}
		</div>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Open modal for @mdo</button>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@fat">Open modal for @fat</button>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Open modal for @getbootstrap</button>
...more buttons...

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">New message</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Recipient:</label>
            <input type="text" class="form-control" id="recipient-name">
          </div>
          <div class="form-group">
            <label for="message-text" class="control-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Send message</button>
      </div>
    </div>
  </div>
</div>
	{% endblock %}
