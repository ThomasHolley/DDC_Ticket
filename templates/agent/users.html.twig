{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <table class="table">
        <thead>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Rôles</th>
            <th scope="col">Action</th>
        </thead>
        <tbody>
            {# On boucle sur les utilisateurs #}
            {% for user in users %}
                <tr>
                    <td scope="row">{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {# On boucle sur les rôles #}
                        {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                    <button type="button" class="btn btn-outline-success"><a href="{{ path('modifier_utilisateur', {'id': user.id}) }}">Modifier</a></button>
                    <button type="button" class="btn btn-outline-danger"><a href="{{ path('delete_utilisateur', {'id': user.id}) }}">Supprimer</a></button>
                    </td>
                </tr>
                
            {% else %}
                <p>Aucun utilisateur inscrit</p>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
