<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}DDC Ticker
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% endblock %}
	</head>

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('app_home') }}">Tableau de Bord</a>
					</li>
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('List_ticket')}}">Tickets</a>
					</li>

					{% if is_granted('ROLE_ADMIN') %}

						<li class="nav-item">
							<a class="nav-item nav-link" href="{{path('list_utilisateurs')}}">Utilisateur</a>
						</li>
					{% endif %}
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('users')}}">Profil</a>
					</li>
					<li class="nav-item ">
						<a class="nav-item nav-link" href="{{path('app_logout')}}">Deconnexion</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<br/>
	<body>
		{% block body %}{% endblock %}
	</body>
</html>
