<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}DDC Ticker
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																				           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
			<link rel="stylesheet" href="assets/styles/app.css">

			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
			<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>

	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('app_home') }}">Tableau de Bord</a>
					</li>
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('List_ticket')}}">Tickets</a>
					</li>

					{% if is_granted('ROLE_ADMIN') %}

						<li class="nav-item">
							<a class="nav-item nav-link" href="{{path('list_utilisateurs')}}">Utilisateur</a>
						</li>
					{% endif %}
					<li class="nav-item">
						<a class="nav-item nav-link" href="{{path('users')}}">Profil</a>
					</li>
					<li class="nav-item ">
						<a class="nav-item nav-link" href="{{path('app_logout')}}">Deconnexion</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<br/>
	<body>
		{% block body %}{% endblock %}
	</body>
</html>
